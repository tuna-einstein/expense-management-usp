<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
			font-size: 20px;
		}
		
		.titleCss {
			background-color: #aaaaff;
		}
		
		.dialogWidth {
			width: 500px;
		}
		
		.content {
			font-size: 20px;
			color: #ff0000;
		}
	</ui:style>
	<gwt:FlowPanel>

		<gwt:VerticalPanel spacing="40">
			<gwt:Label addStyleNames="{style.important}">
				Do you want to delete this expense
				report?
			</gwt:Label>

			<gwt:Label addStyleNames="{style.content}">
				Undeletion can't be done. All the
				logs related to this expense will be deleted.
			</gwt:Label>

			<gwt:HorizontalPanel addStyleNames="{style.dialogWidth}">
				<gwt:Button styleName="{style.important}" ui:field="okButton">
					Yes,
					Delete this expense report
				</gwt:Button>
				<gwt:Button styleName="{style.important}" ui:field="cancelButton">
					Cancel
				</gwt:Button>
			</gwt:HorizontalPanel>
		</gwt:VerticalPanel>
	</gwt:FlowPanel>
</ui:UiBinder> 