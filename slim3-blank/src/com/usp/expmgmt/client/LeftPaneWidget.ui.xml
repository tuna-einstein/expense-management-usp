<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}

		.actionLink:HOVER{
		background-color: #D8E9F0;
		border: 1px SOLID blue;
		font-size:1.4em;
		color: red; 
		}

		.actionLink {
		font-size: 1.2em;
		margin-top:0.5em;
		border: 1px SOLID green;
		display:block;
		}
		
		.panel-border {
		border: 1px SOLID red;
		
		}
	
	</ui:style>
	<gwt:ScrollPanel addStyleNames="{style.panel-border}">
	<gwt:FlowPanel>
		
				<gwt:Anchor ui:field="addTransaction" addStyleNames="{style.actionLink}">
					Add Transaction
				</gwt:Anchor>
			
				<gwt:Anchor ui:field="viewClaims" addStyleNames="{style.actionLink}">
					View Claims
				</gwt:Anchor>
			
				<gwt:Anchor ui:field="viewDebts" addStyleNames="{style.actionLink}">
					View Debts
				</gwt:Anchor>
			
				<gwt:Anchor ui:field="netPayments" addStyleNames="{style.actionLink}">
					Net Payments
				</gwt:Anchor>
				
				<gwt:Anchor ui:field="addContact" addStyleNames="{style.actionLink}">
					Add Contact
				</gwt:Anchor>
			
				<gwt:Anchor ui:field="feedback" addStyleNames="{style.actionLink}">
					Feedback
				</gwt:Anchor>
			
				<gwt:Anchor ui:field="helpAndSupport" addStyleNames="{style.actionLink}">
					Help and Support
				</gwt:Anchor>
				
				
</gwt:FlowPanel>
	
</gwt:ScrollPanel>
</ui:UiBinder> 